{% extends 'layouts/main.twig' %}

{% block content %}
    {% for good in goods %}
        <h1>
            <a href="/good/one?id={{ good.id }}">
                {{ good.nameGood }}
            </a>
        </h1>
        <p>
            Price: {{ good.price }} c.u.
        </p>
        <p>
            Information: {{ good.info }}
        </p>
        <a href="/basket/add?id={{ good.id }}">Добавить в корзину</a>
        <a href="/good/del?id={{ good.id }}">Удалить товар</a>
        <hr>
    {% else %}
        <p>no good found</p>
        <hr>
    {% endfor %}
{% endblock %}
